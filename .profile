# User specific aliases and functions
alias grep="grep --color=always"
alias ll='ls -alF'
alias la='ls -A'
alias sb="source ~/.profile"
alias v=/usr/bin/vi
alias c="clear"
alias ..="cd .."
alias l="ls -halstr"

# Git aliases
alias gs="git status"
alias gd="git diff"
alias gr="git checkout"
alias gc="git commit -a -m"
alias gup="git pull"
alias gp="git push"

# Other settings
set -o vi
PS1="[\u@\h \W]\\$ "
